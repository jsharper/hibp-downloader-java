<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE xml>
<Configuration status="error" strict="true">
	<Appenders>
		<Appender type="Console" name="stdout" target="SYSTEM_OUT">
			<Layout type="PatternLayout"
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %t %5p: %m%n" />
		</Appender>
	</Appenders>

	<Loggers>
		<Logger name="com.jsharper" level="debug" additivity="false">
			<AppenderRef ref="stdout" />
		</Logger>
		<Root level="warn">
			<AppenderRef ref="stdout" />
		</Root>
	</Loggers>
</Configuration>
